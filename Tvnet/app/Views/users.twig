{% extends 'layout.twig' %}

{% block title %}Users{% endblock %}

{% block content %}
    <section class="mt-10">
        <h2 class="text-3xl font-bold mb-10 text-center">All users</h2>

        <div class="grid gap-6 lg:grid-cols-3">
            {% for user in users %}
                <div class="bg-white rounded-lg shadow-lg">
                    <div class="flex justify-center">
                        <div class="flex justify-center mt-6">
                            <img src="https://placehold.co/400x400/orange/white?text=Profile+Pic"
                                 class="w-32 h-32 rounded-full shadow-lg" alt="Profile Picture">
                        </div>
                    </div>
                    <div class="p-6">
                        <h5 class="text-lg font-bold mb-4">{{ user.name }}</h5>
                        <p class="mb-2"><strong>E-mail:</strong> {{ user.email }}</p>
                        <p class="mb-4"><strong>Username:</strong> {{ user.username }}</p>
                        <a href="/users/{{ user.id }}">
                            <button class="bg-gray-400 hover:bg-purple-500 text-white font-bold py-2 px-4 rounded mt-2">
                                See Articles
                            </button>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
